<h1>Stories</h1>
<div class="row">
  {{#each stories}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          <a href="/stories/edit/{{id}}" class="btn-floating halfway-fab orange darken-3">
            <i class="fa fa-pencil"></i>
          </a>
        </div>
        <div class="card-content center-align">
          <h5>{{title}}</h5>
          <hr>
          <p class="story-text">{{body}}</p>
          <br>
          <div class="chip">
            <img src="{{user.image}}">
            {{user.firstName}} {{user.lastName}}
          </div>
        </div>
        <div class="card-action center-align">
          <div class="btn blue darken-3" href="/stories/show/{{id}}" id="readMore">Read More</div>
        </div>
      </div>
    </div>
    {{else}}
    <p>no stories</p>
  {{/each}}
</div>