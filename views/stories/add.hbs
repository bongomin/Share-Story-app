<h1>add stories</h1>

<div class="row">
   <form action="/stories" method="POST" class="col-sm12">
<div class="row">
       <div class="input-field">
          <input type="text" name="title">
          <label for="title">Title</label>
       </div>
    </div>

    <div class="row">
       <div class="input-field">
          <select name="status">
             <option value="Public" selected>Public</option>
             <option value="Private">Private</option>
             <option value="Unpublished">Unpublished</option>
          </select>
          <label for="status">Satus</label>
       </div>
    </div>
    <div class="row">
       <p>
          <input type="checkbox" name="allowComments" class=" blue darken-3 filled-in" id="filled-in-box" checked="checked">
          <label for="allowComments">Allow Comments</label> 
       </p>
    </div>
    <div class="row">
       <div class="input-field">
          <h5>Tell Us Your story * {{user.firstName}}</h5>
          <textarea name="body"></textarea>
       </div>
    </div>
    <input type="submit" value="Save" class="blue darken-3 btn">
   </form>
</div>